<h1>MENU MANUAL</h1>
<% @tweets.each do |t| %>
    <% if t.category == "introduction" %>  
    <p>内容:<%= t.body %></p>
    <%= t.user.email %>
      <%=  video_tag t.video_url ,:controls => true if t.video?%>
      <%= t.body %>
      <% t.images.each do |image| %>
        <%= image_tag image.image_url, size: "250x200" %>
      <% end %>
      <%= t.created_at %>
      <%= link_to "詳細へ", tweet_path(t.id) %>
      <%= link_to "編集する", edit_tweet_path(t.id) %>
      <%= button_to "削除する", tweet_path(t.id), method: :delete %>
    <% end %>

    
<% end %>